<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= link_to @map.title, map_path(@map), method: :get, class: 'header-link' %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to 'チャットを終了する', map_path(@map), method: :delete %>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@map, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :comment, class: 'form-message', placeholder: 'メッセージを入力' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
